{
  "manifest_version": 2,
  "name": "Attachment for Amazon",
  "version": "3.1.1",
  "description": "Replace URL and attach links in amazon website",
  "icons" : {
    "128": "icon128.png"
  },
  "background": {
    "scripts": [
      "tiny-background.js",
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "js": ["attachment-for-amazon.user.js"],
      "matches": ["http://www.amazon.co.jp/*", "https://www.amazon.co.jp/*"],
      "run_at" : "document_end"
    }
  ],
  "options_page": "options.html",
  "options_ui": {
    "chrome_style": true,
    "page": "options.html"
  }
}
